/* pages/order/order.wxss */
Page{
  width: 100%;
  min-height: 100%;

  background-color: #F5F4F7;
}
.show{
  display: block;
  width: 100%;
  height: auto;
  background-color: #F5F4F7;
  padding-top: 24rpx;
}

.hidden{
  display: none;

}
.contain{
  width: 100%;
  height: auto;
  overflow: hidden;
  background-color: #fff;
}
.bg{
  width: 100%;
  height:170rpx;
  background:linear-gradient(-10deg,rgba(235,23,27,1) 0%,rgba(255,140,25,1) 100%);
  text-align: center;
  padding-top: 67rpx;
  box-sizing: border-box;
}
.bg>text{
  font-size:36rpx;
font-family:PingFang SC;
font-weight:bold;
color:rgba(255,255,255,1);

}

.sroll{
  width:100%;
  height:60rpx;
  background:rgba(255,255,255,1);
  border-radius:30rpx 30rpx 0px 0px;
  padding:  0 46rpx;
  box-sizing: border-box;
  position: relative;
  top: -20rpx;
  margin-bottom: 24rpx;
}
.swiper-tab{
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.swiper-tab-item {
  width: auto;
  height: 100%;
  text-align: center;
  padding-top: 15rpx;
}
.swiper-tab-item >text{
  font-size:28rpx;
font-family:PingFang SC;
font-weight:500;
color:rgba(102,102,102,1);
}
.swiper-tab-item >.dibu{

}
.active>text{
  font-size:32rpx;
  font-family:PingFang SC;
  font-weight:bold;
  color:rgba(26,26,26,1);
  margin-top: 15rpx;
}
.active>.dibu{
  width:72rpx;
height:6rpx;
background:linear-gradient(-30deg,rgba(255,56,59,1) 0%,rgba(255,166,76,1) 100%);
border-radius:3rpx 3rpx 3rpx 3rpx;
margin: 0 auto;
margin-top: 22rpx;
}



.item{
  width: 94%;
  height: auto;
  overflow: hidden;
  background-color: #fff;
  margin: 0 auto;
  margin-top: 24rpx;
  border-radius:20rpx;
  padding: 24rpx 30rpx;
  box-sizing: border-box;
}
.item>.store{
  width: 100%;
  height: auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.item>.store>.left>.img{
width: 32rpx;
height: 32rpx;
vertical-align: middle;
}
.item>.store>.left>text{
  font-size:30rpx;
font-family:PingFang SC;
font-weight:500;
color:rgba(26,26,26,1);
vertical-align: middle;
}
.item>.store>.left>.icon{
  width: 42rpx;
  height: 42rpx;
  vertical-align: middle;
}
.item>.store>.right>text{
  font-size:26rpx;
font-family:PingFang SC;
font-weight:500;
color:rgba(255,76,79,1);
}
.item>.store>.right>image{
  width: 98rpx;
  height: 82rpx;
}
.item>.center{
  margin-top: 37rpx;
}
.item>.center>button{
  width:84rpx;
height:32rpx;
background:rgba(242,245,247,1);
border-radius:16rpx 18rpx 0px 16rpx;
font-size:20rpx;
font-family:PingFang SC;
font-weight:400;
color:rgba(102,102,102,1);
display: inline-block;
line-height: 32rpx;
}
.item>.center>text{
  font-size:24rpx;
font-family:PingFang SC;
font-weight:500;
color:rgba(153,153,153,1);
display: inline-block;
margin-left: 20rpx;
}
.item>.tpList{
  width: 100%;
  height: auto;

  position: relative;
}
.item>.tpList>.imgList{
  /* width: 100%; */
  height: auto;
  overflow: hidden;
  display: flex;
  justify-content: flex-start;
  overflow:auto;white-space: nowrap;
}
.item .imgList>image{
  width:150rpx;
height:150rpx;
border-radius:10rpx;
margin-left: 8rpx;

}
.item>.tpList>.load{
  width: 200rpx;
  height: 150rpx;
float: right;
  padding-top: 46rpx;
  
  box-sizing: border-box;
  text-align: right;
  /* padding-right:20rpx ; */
  z-index: 99999999;
  position: relative;
  top: -150rpx;
}
.item>.tpList>.load>image{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}
.item>.tpList>.load>.pri{
  font-size:32rpx;
font-family:PingFang SC;
font-weight:500;
color:rgba(26,26,26,1);
display: block;
position: relative;
}
.item>.tpList>.load>.num{
  margin-left: 11rpx;
  font-size:22rpx;
font-family:PingFang SC;
font-weight:500;
color:rgba(153,153,153,1);
position: relative;
}
.btnList{
  margin-top: 40rpx;
  display: flex;
  justify-content: flex-end;
  position: relative;
  left: 211rpx;
}
.btnList>button{
  width:142rpx;
height:60rpx;
border:1px solid rgba(153,153,153,1);
border-radius:30rpx;
font-size:24rpx;
font-family:PingFang SC;
font-weight:500;
color:rgba(51,51,51,1);
margin-right: 20rpx;
}
.info{
  width: 400rpx;
  height: 150rpx;
  margin-left: 20rpx;
  display: inline-block;
}
.info>text{
  font-size:26rpx;
font-family:PingFang SC;
font-weight:500;
color:rgba(51,51,51,1);
line-height: 150rpx;
}