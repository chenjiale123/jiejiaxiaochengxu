/* pages/phoneLogin/phoneLogin.wxss */
.contain{
  width: 100%;
  height: 100%;
  padding-top: 115rpx;
  box-sizing: border-box;
}
.phone{
  width: 100%;
  padding:0 5%;
  box-sizing: border-box;
  position: relative;
  height: 98rpx;
}
.phone>input{
/* position: absolute; */
width: 70%;
height: 100%;
border-bottom:2rpx solid rgba(217,217,217,1) ;
}
.placeholder-class{
  font-size:30rpx;
font-family:Microsoft YaHei;
font-weight:400;
color:rgba(179,179,179,1);
}
.phone>text{
  position: absolute;
  font-size:24rpx;
font-family:Microsoft YaHei;
font-weight:400;
color:rgba(179,179,179,1);
right: 5%;
bottom: 30%;
z-index: 99999;
display: inline-block;
height: 42rpx;
z-index: 999999999;

}
.code{
  width: 100%;
  padding:0 5%;
  box-sizing: border-box;
  position: relative;
  margin-top: 20rpx;
  height: 98rpx;
}
.code>input{
/* position: absolute; */
width: 100%;
height: 100%;
border-bottom:2rpx solid rgba(217,217,217,1) ;
}
.loginBtn{
  text-align: center;
  display: block;
  width: 90%;
  height: 98rpx;
  background:rgba(228,232,235,1);
border-radius:49rpx;
margin:0 auto;
margin-top: 80rpx;
font-size:30rpx;
font-family:Microsoft YaHei;
font-weight:400;
color:rgba(179,179,179,1);
line-height: 98rpx;


}

.loginBtn2{
  display: block!important;
  text-align: center;
  display: inline-block;
  width: 90%;
  height: 98rpx;
  position: relative;
  line-height: 78rpx;
  margin:0 auto;
  margin-top: 80rpx;
}
.loginBtn2>text{
  position: relative;
  text-align: center;
  font-size:30rpx;
font-family:Microsoft YaHei;
font-weight:400;
color:rgba(255,255,255,1);
z-index: 999999;

}
.loginBtn2>image{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
}
.deal{
  width: 90%;
  text-align: center;
  font-size:24rpx;
font-family:Microsoft YaHei;
font-weight:400;
color:rgba(153,153,153,1);
margin-top: 600rpx;

}
.deal>text{
  font-size:24rpx;
  font-family:Microsoft YaHei;
  font-weight:400;
  color:#FF4C4F;
}
