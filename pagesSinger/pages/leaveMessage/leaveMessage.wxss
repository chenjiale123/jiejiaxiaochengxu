.contain{
  width: 100%;
  height: 100%;
  background-color: #F2F5F7;
  padding-top: 39rpx;
  box-sizing: border-box;
}
.txt{
  width: 94%;
  height:302rpx;
  background:rgba(255,255,255,1);
  border-radius:12rpx;
  margin: 0 auto;
  position: relative;
}
textarea{
  width: 100%;
  height: 100%;
  padding-left: 61rpx;
  padding-top: 22rpx;
  box-sizing: border-box;
  padding-right: 61rpx;
}
.message{
  font-size:28rpx;
font-family:PingFang SC;
font-weight:500;
color:rgba(179,179,179,1);
padding-left: 61rpx;
padding-top: 26rpx;
box-sizing: border-box;
top: 22rpx;
left: 61rpx;
position: absolute;
}
.txt>image{
  position: absolute;
  width: 32rpx;
  height: 32rpx;
  left: 22rpx;
  top: 22rpx;
}
.txt>.num{
  position: absolute;

  right: 27rpx;
  bottom: 27rpx;
}
.txt>.num>text:nth-child(1){
  font-size:28rpx;
font-family:PingFang SC;
font-weight:500;
color:rgba(179,179,179,1);
}
.txt>.num>text:nth-child(2){
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:#333;
}
