.contain{
  width: 100%; 
  height: 100%;
  background-color: #fff;
  padding-top: 113rpx;
  box-sizing: border-box;
 }
 .send{
  width: 94%;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
 }
 .send>.to>text:nth-child(1){
  font-size:26rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(153,153,153,1);
 }
 .send>.to>text:nth-child(2){
  font-size:26rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:#333333;
  margin-left: 15rpx;
 }
 .again>text{
  font-size:26rpx;
  font-family:PingFang SC;
