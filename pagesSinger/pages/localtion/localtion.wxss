/* pages/localtion/localtion.wxss */
.contain{
  width: 100%;
  height: 100%;
  background-color: rgba(242,245,247,1);
}
.top{
  width: 100%;
  height: auto;
  overflow: hidden;
  padding: 0 30rpx;
  box-sizing: border-box;
  padding-top: 20rpx;
  display: flex;
  justify-content: space-between;
}
.top>.left{
  width: auto;
  height: 44rpx;
 overflow: hidden;
}
.top>.left>text{
  font-size:26rpx;
font-family:Microsoft YaHei;
font-weight:400;
color:rgba(51,51,51,1);
vertical-align: middle;
}
.top>.left>image{
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
}
.top>.right{
  width: 80%;
  height:66rpx;
  background:rgba(255,255,255,1);
  border-radius:33rpx;
}
.top>.right>input{
  width: 100%;
  height: 100%;
  background:rgba(255,255,255,1);
border-radius:33rpx;
position: relative;
padding-left: 63rpx;
box-sizing: border-box;
}
.top>.right image{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  left: 20rpx;
  top: 10rpx;
}
.input{
  font-size:26rpx;
font-family:Microsoft YaHei;
font-weight:400;
color:rgba(153,153,153,1);
}
.address{
  width: 100%;
  height: auto;
  overflow: hidden;
  border-radius: 20rpx 20rpx 0 0;
  background-color: #fff;
  margin-top: 30rpx;
}
.address>.item{
 width: 100%;
 height: 130rpx;
 padding:0 30rpx;
 box-sizing: border-box;
 border-bottom: 1px solid rgba(240,240,240,1);
 display: flex;
 justify-content: space-between;
}
.address>.item>image{
  width: 40rpx;
  height: 40rpx;
  margin-top: 22rpx;
}
.address>.item>.center{
  width: 78%;
  height: auto;
  overflow: hidden;
  padding: 15rpx 0;
}
.address>.item>.center>.title>text{
  font-size:30rpx;
font-family:Microsoft YaHei;
font-weight:400;
color:rgba(102,102,102,1);
vertical-align: middle;
}
.address>.item>.center>.title>.etc{
  font-size:30rpx;
font-family:Microsoft YaHei;
font-weight:400;
color:rgba(255,76,79,1);
vertical-align: middle;
}
.address>.item>.center>.title>image{
  width: 56rpx;
  height: 28rpx;
  margin-left: 10rpx;
  vertical-align: middle;
}
.address>.item>.center>text{
  font-size:24rpx;
font-family:Microsoft YaHei;
font-weight:400;
color:rgba(102,102,102,1);
margin-top: 12rpx;
}
.address>.item>text{
  margin-top: 22rpx;
  font-size:22rpx;
font-family:Microsoft YaHei;
font-weight:400;
color:rgba(179,179,179,1);
}
.remain{
  padding-left: 30rpx;
  box-sizing: border-box;
  margin-top: 36rpx;
  vertical-align: middle;
}
.remain>image{
  width: 32rpx;
  height: 32rpx;
  vertical-align: middle;
}
.remain>text{
  font-size:24rpx;
font-family:Microsoft YaHei;
font-weight:400;
color:rgba(102,102,102,1);
vertical-align: middle;
margin-left: 5rpx;
}
