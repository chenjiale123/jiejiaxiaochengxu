/* pages/suggest/suggest.wxss */
.contain{
  width: 100%;
  height: 100%;
  background:rgba(242,245,247,1);
border-radius:30rpx 30rpx 0px 0px;
}
.contain>view{
  box-sizing: border-box;
  padding: 0 30rpx;
  padding-top: 35rpx;
}
.contain>view>text{
  font-size:24rpx;
font-family:PingFang SC;
font-weight:500;
color:rgba(153,153,153,1);
}
.contain>view>.text{
  width: 100%;
  height:302rpx;
background:rgba(255,255,255,1);
border-radius:12rpx;
position: relative;
margin-top: 22rpx;
}
.contain>view>.text>textarea{
  width: 100%;
  height: 100%;
  padding-left: 61rpx;
  padding-top: 26rpx;
}
.contain>view>.text>image{
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  left: 23rpx;
  top: 23rpx;
}
.sug{
  font-size:28rpx;
font-family:PingFang SC;
font-weight:500;
color:rgba(179,179,179,1);
}
button{
  text-align: center;
  display: block;
  width: 90%;
  height: 98rpx;
  background:linear-gradient(-10deg,rgba(255,127,130,1) 0%,rgba(255,204,153,1) 100%);
border-radius:49rpx;
margin:0 auto;
margin-top: 44rpx;
font-size:30rpx;
font-family:Microsoft YaHei;
font-weight:400;
color:rgb(255, 255, 255);
line-height: 98rpx;
}

