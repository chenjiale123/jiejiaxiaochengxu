/* pages/classify/classify.wxss */
.contain{
  width: 100%;
  height: 100%;
  background:rgba(242,245,247,1);
  padding-top: 147rpx;
  /* background-color: #fff; */
}
.top{
  width: 100%;
  height: 70rpx;
  position: fixed;
  top: 0;
  left: 0;
  background-color: #F2F5F7;
  z-index: 99999;
  padding-top: 66rpx;
}
.logo{
  width:174rpx;
  height:68rpx;
  background:rgba(255,255,255,1);
  border:1px solid rgba(230,230,230,1);
  border-radius:32rpx;
  position: absolute;
  top: 66rpx;
  left: 3%;
  display: flex;
  justify-content: space-between;
  padding: 8rpx 0;
  box-sizing: border-box;
}
.logo>.left{
  width: 50%;
  height: 100%;
  border-right: 1px solid rgba(230,230,230,1); 
  text-align: center;
  vertical-align: middle;
}
.logo>.left>image{
  width: 38rpx;
  height: 38rpx;
vertical-align: middle;
}
.logo>.right{
  width: 50%;
  height: 100%;
  text-align: center;

}

.logo>.right>image{
  width: 38rpx;
  height: 38rpx;
  vertical-align: middle;
}

.search{
  width:228rpx;
  height:66rpx;
  background:rgba(255,255,255,1);
  border-radius:33rpx;
  margin: 0 auto;
  position: relative;
  left: -40rpx;
}
.search>input{
  width:100%;
  height:100%;
  background:rgba(255,255,255,1);
  border-radius:33rpx;
  padding-left: 60rpx;
  position: relative;
}
.search image{
  width: 44rpx;
  height: 44rpx;
  position: absolute;
  left: 20rpx;
  top: 12rpx;
}
.input{

  font-size:26rpx;
  font-family:Microsoft YaHei;
  font-weight:400;
  color:rgba(153,153,153,1);
}
.list{

  height: auto;
  overflow: hidden;
  border-radius:30rpx 30rpx 0px 0px;
  padding-bottom: 40rpx;
  background-color: #fff;
}
.item{

  width: 100%;
  height: auto;
  overflow: hidden;
  background-color: #fff;
  padding:0 30rpx;
  box-sizing: border-box;

}
.item>text{
  width: 100%;

  display: block;


  font-size:30rpx;
font-family:Microsoft YaHei;
font-weight:bold;
color:rgba(26,26,26,1);
margin-top: 65rpx;
}
.item>.icon{
  width: 100%;
  height: 120rpx;
  margin-top: 30rpx;
}
.item>.icon>.iconItem{
  display: inline-block;
  width: 120rpx;
  height: auto;
  float: left;
  margin-right: 48rpx;
  font-size: 26rpx;
  text-align: center;
}
.item>.icon>.iconItem>image{
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
}
.item>.icon>.iconItem>text{
  font-size:22rpx;
font-family:Microsoft YaHei;
font-weight:400;
color:rgba(51,51,51,1);
}



/*  */

.link {
  width: 100%;
  height: 100%;
  display: flex;
}

.link  .left {
  width: 220rpx;
  /* 这里的高度可以写也可以不写，效果还是可以实现的，不过最好还是写上吧 */
  height: 100vh;
  background-color: #F5F5F5;
  text-align: center;
  color: #333;
}

.link  .left .item {
  overflow: hidden;
height: auto;
background-color: #F5F5F5;
padding: 30rpx 0;
box-sizing: border-box;
position: relative;
}
.link  .left .item>text{
  font-size:26rpx;
font-family:PingFang SC;
font-weight:500;
color:rgba(102,102,102,1);
display: block;
margin: 0 auto;
}
.link  .left .item>button{
  width:54rpx;
height:26rpx;
background:rgba(255,255,255,1);
border-radius:13rpx;
margin: 0 auto;
margin-top: 12rpx;
font-size:18rpx;
font-family:PingFang SC;
font-weight:500;
color:rgba(179,179,179,1);
}

.link  .left .active>text{
  font-size:26rpx;
font-family:PingFang SC;
font-weight:500;
color:#FF4C4F;
display: block;
margin: 0 auto;
}
.link  .left .active>button{
  width:54rpx;
height:26rpx;
background:rgba(242,245,247,1);
border-radius:13rpx;
margin: 0 auto;
margin-top: 12rpx;
font-size:18rpx;
font-family:PingFang SC;
font-weight:500;
color:rgba(255,76,79,1);
}

.link  .left .item>.line{
  display: none;
}
.link  .left .avtive>.line{
  width:6rpx;
height:42rpx;
background:linear-gradient(-45deg,rgba(255,56,59,1) 0%,rgba(255,166,76,1) 100%);
border-radius:0px 4rpx 4rpx 0px;
position: absolute;
left: 0 ;
top: 50%;
margin-top: -21rpx;
}

.active {
  background-color: #fff!important;
 
}

.link .right {
  /* 这里的高度可写也可不写，效果还是可以实现的，不过最好还是写上吧 */
  height: 100vh;
  background-color: #fff;
  width: 80%;
  padding: 0 30rpx;
  box-sizing: border-box;
}



.link .title {
display: flex;
justify-content: space-between;
margin-top: 58rpx;
align-items: center;
}
.link .title>text{
  font-size:26rpx;
font-family:PingFang SC;
font-weight:bold;
color:rgba(26,26,26,1);
display: block;
}
.link .title>.all>text{
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(179,179,179,1);
  vertical-align: middle;
}
.link .title>.all>image{
  width: 44rpx;
  height: 44rpx;
  vertical-align: middle;
}

.link .content {
  margin-top: 44rpx;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.link .content>.listItem{
  width: 110rpx;
  height: auto;
  overflow: hidden;
  text-align: center;
}
.link .content>.listItem>image{
  display: block;
  width: 93rpx;
  height: 100rpx;
}
.link .content>.listItem>text{
  display: block;
  margin: 0 auto;
  margin-top: 21rpx;
  font-size:22rpx;
font-family:PingFang SC;
font-weight:500;
color:rgba(102,102,102,1);
}
.link .content>.listItem>button{
  width:54rpx;
height:26rpx;
background:rgba(242,245,247,1);
border-radius:13rpx;
margin: 0 auto;
margin-top: 10rpx;
font-size:18rpx;
font-family:PingFang SC;
font-weight:500;
color:rgba(179,179,179,1);
}
.list-item{
  font-size: 32rpx;
  color: #333;
  line-height: 50rpx;
}

