/* pages/comment/comment.wxss */
.show{
  display: block;
}
.hidden{
  display: none;
}

.whole{
  width: 100%;
  height: 100%;
  text-align: center;
}

.contain{
  width: 100%;
  height: auto;
  overflow: hidden;
}
.top{
  width: 100%;
  height: 105rpx;
  padding-top: 52rpx;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999999999999;
  background-color: #fff;
}
.logo{
  width:174rpx;
  height:68rpx;
  background:rgba(255,255,255,1);
  border:1px solid rgba(230,230,230,1);
  border-radius:32rpx;
  position: fixed;
  top: 66rpx;
  left: 3%;
  display: flex;
  justify-content: space-between;
  padding: 8rpx 0;
  box-sizing: border-box;
}
.logo>.left{
  width: 50%;
  height: 100%;
  border-right: 1px solid rgba(230,230,230,1); 
  text-align: center;
  vertical-align: middle;
}
.logo>.left>image{
  width: 38rpx;
  height: 38rpx;
vertical-align: middle;
}
.logo>.right{
  width: 50%;
  height: 100%;
  text-align: center;

}

.logo>.right>image{
  width: 38rpx;
  height: 38rpx;
  vertical-align: middle;
}
.top>text{
  width: 148rpx;
  display: block;
  margin: 0 auto;
  font-size:36rpx;
font-family:PingFang SC;
font-weight:bold;
color:rgb(0, 0, 0);
margin-top: 15rpx;

}
.goodCom{
  background-color: #fff;
  width: 100%;
  height: 78rpx;
  text-align: center;
  vertical-align: middle;
  padding-top: 146rpx;
}
.goodCom>image{
width: 32rpx;
height: 32rpx;
vertical-align: middle;
}
.goodCom>text{
  margin-left: 10rpx;
  font-size:26rpx;
font-family:PingFang SC;
font-weight:500;
color:rgba(51,51,51,1);
}
.swiper-tab1{
  width: 100%;
  height:96rpx;
background:rgba(242,245,247,1);
display: flex;
justify-content: space-between;
padding: 0 30rpx;
box-sizing: border-box;
line-height: 90rpx;
}
.swiper-tab-item1{
  /* width: auto; */
  overflow: hidden;
  display: inline-block;
}
.swiper-tab-item1>text{
  font-size:28rpx;
font-family:PingFang SC;
font-weight:500;
color:rgba(102,102,102,1);
display: block;
}
.active1>text{
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:#FF4C4F;
  display: block;
}
.swiper-tab-item1>.dibu{

}
.active1>.dibu{
  margin: 0 auto;
  width:100%;
  height:6rpx;
  background:linear-gradient(-10deg,rgba(255,56,59,1) 0%,rgba(255,166,76,1) 100%);
  border-radius:3rpx 3rpx 3rpx 3rpx;
}
.content{
  background-color: #fff;
  height: auto;
  overflow: hidden;

}


.item{
  width: 100%;
  height: auto;
  overflow: hidden;
  padding-bottom: 28rpx;
  border-bottom: 1px solid rgba(240,240,240,1);
  padding: 0 30rpx;
  box-sizing: border-box;
  padding-top: 44rpx;
}
.topOn{
  width: 100%;
  height: auto;
  overflow: hidden;
  display: flex;
  padding-bottom: 10rpx;
  justify-content: space-between;
}
.topOn>text{
  font-size:24rpx;
font-family:PingFang SC;
font-weight:500;
color:rgba(179,179,179,1);
height: 40rpx;
display: block;
line-height: 40rpx;
}
.item .avota{
  width: 40%;
  height: 70rpx;
  overflow: hidden;
  position: relative;
}
.item .avota>image{
  position: absolute;
  width:66rpx;
height:66rpx;
border-radius:50%;
top: 0;
left: 0;
}
.item .avota>.name{
  position: absolute;
  top: 0;
  left: 82rpx;
  font-size:28rpx;
font-family:PingFang SC;
font-weight:500;
color:rgba(26,26,26,1);
overflow: hidden;
text-overflow:ellipsis;
white-space: nowrap;
}
.item .avota>.star{
  position: absolute;
  top: 35rpx;
  left: 82rpx;
 

}
.item .avota>.star>image{
  width: 28rpx;
  height: 28rpx;
  margin-left: 8rpx;
}
.item>text{
  font-size:28rpx;
font-family:PingFang SC;
font-weight:500;
color:rgba(26,26,26,1);
margin-top: 40rpx;
display: block;
}
.item>.imgArray{
  margin-top: 16rpx;
  /* flex-wrap: nowrap; */
overflow: auto;
white-space: nowrap;
height:190rpx ;
padding-bottom: 20rpx;
}
.item>.imgArray image{
  display: inline-block;
  width:190rpx;
height:190rpx;
border-radius:10rpx;
float: left;
margin-right: 19rpx;

}
