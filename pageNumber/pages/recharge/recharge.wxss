.contain{
  width: 100%;
  height: 100%;
  background-color: #F2F5F7;
}
.contain>.whole{
  width: 100%;
  height: 100%;
  background:rgba(255,255,255,1);
border-radius:30rpx 30rpx 0px 0px;
padding: 30rpx;
box-sizing: border-box;
}
.contain>.whole>text{
  font-size:30rpx;
font-family:PingFang SC;
font-weight:500;
color:rgba(51,51,51,1);
}
.contain>.whole>.input{
  padding: 30rpx 0;
  width: 100%;
  height: 100rpx;
  border-bottom: 1px solid #F2F5F7;
  position: relative;

}
.contain>.whole>.input>text{
  font-size:66rpx;
font-family:PingFang SC;
font-weight:bold;
color:rgba(26,26,26,1);
position: absolute;
top: 30rpx;
left: 0;
}
.contain>.whole>.input>input{
width: 100%;
height: 100%;
padding-left: 70rpx;
font-size: 45rpx;
}
